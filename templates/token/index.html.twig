    <link href="{{ asset('css/login.css') }}" rel="stylesheet">
{% endblock %}

{% block header %}
{% endblock %}

{% block body %}

    <section class="vh-100" style="margin-top: 6%">
        <div class="container-fluid h-custom" >
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-4">
                    <img src="{{ asset('img/logo.png') }}" class="img-fluid"
                         alt="Sample image">
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">

                    <form action="{{ path('dashboard') }}" method="POST">
                        <div class="align-items-center justify-content-center justify-content-lg-start">
                            <h1>Iniciar Sesion</h1>
                        </div>

                        <div class="divider d-flex align-items-center my-4">
                            <p> </p>
                        </div>

                        <!-- Email input -->
                        <div class="form-outline mb-4">
                            <label class="form-label" for="form3Example3">Token ID</label>
                            <input type="text" id="form3Example3" class="form-control form-control-lg"
                                   placeholder="Introduce tu token" name="tokenID"/>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-3">
                            <label class="form-label" for="form3Example4">Instance ID</label>
                            <input type="text" id="form3Example4" class="form-control form-control-lg"
                                   placeholder="Introduce tu Instancia" name="instanceID" />
                        </div>

                        <div class="text-center text-lg-start mt-4 pt-2">
                            <button type="submit" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">Entrar</button>
                            <p class="small fw-bold mt-2 pt-1 mb-0">Aun no tienes tu token? <a href="https://e-blaster.com/signup" target="_blank" class="link-danger">Registrate aqui!</a></p>
                        </div>
                    </form>

                </div>
            </div>
        </div>

        <div class="d-flex flex-column flex-md-row text-center text-md-start justify-content-between py-4 px-4 px-xl-5 bg-primary" style="margin-top: 4%">
            <!-- Copyright -->
            <div class="text-white mb-3 mb-md-0">
